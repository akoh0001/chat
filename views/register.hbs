<div class="grid-content form-register">
    <h3>Register</h3>
    <form action="/register" method="POST">
        <label for="username">Username *required</label>
        <input name="username" placeholder="Username" type="text" value="{{username}}" required>
        <label for="password">Password *required</label>
        <input name="password" placeholder="Password" type="password" required>
        <label for="email">Email</label>
        <input name="email" placeholder="Email" type="email" value="{{email}}">
        <input class="button expand" type="submit" value="Submit">
    </form>
    {{message}}
</div>